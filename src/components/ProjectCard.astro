--- 
const { title, image, description, project_status } = Astro.props
import '../scripts/gsap.ts'
---

<div class="flex flex-col text-white font-departure justify-center border-2 border-zinc-900
 items-center text-center pb-2 bg-neutral-950 bg-opacity-50 shadow-md shadow-neutral-900
 hover:scale-105 duration-200" id="card">
    <h1 class="text-2xl">{title}</h1>
    <img src={image} class="w-32 h-32" alt="">
    <p class="p-2">{description}</p>
    <h1>Project Status: {project_status}</h1>
</div>